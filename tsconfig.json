{
  "extends": "expo/tsconfig.base",
  "exclude": ["node_modules"],
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@screens": ["src/Screens"],
      "@components": ["src/Components"],
      "@theme": ["src/Theme"],
      "@hooks": ["src/Hooks"],
      "@config": ["src/Config"],
      "@services": ["src/Services"],
    },
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
}
